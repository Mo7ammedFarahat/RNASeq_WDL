#!/bin/bash

cd /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution
tmpDir=$(mkdir -p "/cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/tmp.90fa709a" && echo "/cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/tmp.90fa709a")
chmod 777 "$tmpDir"
export _JAVA_OPTIONS=-Djava.io.tmpdir="$tmpDir"
export TMPDIR="$tmpDir"
export HOME="$HOME"
(
cd /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution

)
out9c424ddd="${tmpDir}/out.$$" err9c424ddd="${tmpDir}/err.$$"
mkfifo "$out9c424ddd" "$err9c424ddd"
trap 'rm "$out9c424ddd" "$err9c424ddd"' EXIT
touch '/cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution/stdout' '/cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution/stderr'
tee '/cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution/stdout' < "$out9c424ddd" &
tee '/cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution/stderr' < "$err9c424ddd" >&2 &
(
cd /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution


fastqc /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/inputs/1972885663/S1.R2.fastq.gz -o .
)  > "$out9c424ddd" 2> "$err9c424ddd"
echo $? > /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution/rc.tmp
(
# add a .file in every empty directory to facilitate directory delocalization on the cloud
cd /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution
find . -type d -exec sh -c '[ -z "$(ls -A '"'"'{}'"'"')" ] && touch '"'"'{}'"'"'/.file' \;
)
(
cd /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution
sync


)
mv /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution/rc.tmp /cromwell-executions/rnaseq/9c424ddd-5399-4b08-885a-0bd8ae7b1a71/call-fastqc/shard-1/execution/rc
