mv /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/f38cbb35-7096-422f-9227-9e99b58161c9/call-getrawdata/execution/rc.tmp /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/f38cbb35-7096-422f-9227-9e99b58161c9/call-getrawdata/execution/rc
