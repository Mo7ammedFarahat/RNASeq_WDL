#!/bin/bash

cd /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/f38cbb35-7096-422f-9227-9e99b58161c9/call-getrawdata/execution
tmpDir=$(mkdir -p "/home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/f38cbb35-7096-422f-9227-9e99b58161c9/call-getrawdata/tmp.d422a381" && echo "/home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/f38cbb35-7096-422f-9227-9e99b58161c9/call-getrawdata/tmp.d422a381")

