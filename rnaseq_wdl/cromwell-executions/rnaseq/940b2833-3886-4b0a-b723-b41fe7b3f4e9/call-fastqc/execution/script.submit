#!/bin/bash
# make sure there is no preexisting Docker CID file
rm -f /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/940b2833-3886-4b0a-b723-b41fe7b3f4e9/call-fastqc/execution/docker_cid
# run as in the original configuration without --rm flag (will remove later)
docker run \
  --cidfile /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/940b2833-3886-4b0a-b723-b41fe7b3f4e9/call-fastqc/execution/docker_cid \
  -i \
   \
  --entrypoint /bin/bash \
  -v /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/940b2833-3886-4b0a-b723-b41fe7b3f4e9/call-fastqc:/cromwell-executions/rnaseq/940b2833-3886-4b0a-b723-b41fe7b3f4e9/call-fastqc:delegated \
  mohammedfarahat/rna-seq:fastqc /cromwell-executions/rnaseq/940b2833-3886-4b0a-b723-b41fe7b3f4e9/call-fastqc/execution/script

# get the return code (working even if the container was detached)
rc=$(docker wait `cat /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/940b2833-3886-4b0a-b723-b41fe7b3f4e9/call-fastqc/execution/docker_cid`)

# remove the container after waiting
docker rm `cat /home/user08/rna-seq/rnaseq_wdl/cromwell-executions/rnaseq/940b2833-3886-4b0a-b723-b41fe7b3f4e9/call-fastqc/execution/docker_cid`

# return exit code
exit $rc
